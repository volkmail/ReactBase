{
    "include": [
        "src/**/*",
        "src/custom.d.ts"
    ],
    "exclude": [
        "build",
        "node_modules"
    ],
    "compilerOptions": {
        "target": "es5",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "dom",
            "esnext"
        ],
        "importHelpers": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": [
                "src/*"
            ]
        },
        "strict": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true
    }
}